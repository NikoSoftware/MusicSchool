<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_collection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    >

    <include layout="@layout/layout_appbar_normal" />
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_marginBottom="@dimen/margin_50"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:background="@color/hint_grey"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_pay_title"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:padding="@dimen/music_sign_text_margin_left"
                android:text=""
                android:textSize="17sp"
                android:textColor="@color/text_black"
                android:textStyle="bold"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/music_sign_text_margin_left"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_project_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/margin_3"
                    android:paddingBottom="@dimen/margin_3"
                    android:gravity="center_vertical"
                    android:text="考生姓名："
                    android:textColor="@color/text_normal"
                    />
                    <TextView
                        android:id="@+id/tv_content1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/margin_3"
                        android:paddingBottom="@dimen/margin_3"
                        android:layout_marginLeft="@dimen/music_sign_text_margin_left"
                        android:gravity="center_vertical|left"
                        android:text=""
                        android:textColor="@color/text_black"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/music_sign_text_margin_left"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_project_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/margin_3"
                    android:paddingBottom="@dimen/margin_3"
                    android:gravity="center_vertical"
                    android:text="报考专业："
                    android:textColor="@color/text_normal"
                    />
                <TextView
                    android:id="@+id/tv_content2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/margin_3"
                    android:paddingBottom="@dimen/margin_3"
                    android:layout_marginLeft="@dimen/music_sign_text_margin_left"
                    android:gravity="center_vertical|left"
                    android:text=""
                    android:textColor="@color/text_black"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/music_sign_text_margin_left">

                <TextView
                    android:id="@+id/tv_project_name3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/margin_3"
                    android:paddingTop="@dimen/margin_3"
                    android:text="报考级别："
                    android:textColor="@color/text_normal" />

                <TextView
                    android:id="@+id/tv_content3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/music_sign_text_margin_left"
                    android:gravity="center_vertical|left"
                    android:paddingBottom="@dimen/margin_3"
                    android:paddingTop="@dimen/margin_3"
                    android:text=""
                    android:textColor="@color/text_black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/music_sign_text_margin_left">

                <TextView
                    android:id="@+id/tv_project_name4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/margin_3"
                    android:paddingTop="@dimen/margin_3"
                    android:text="报考时间："
                    android:textColor="@color/text_normal" />

                <TextView
                    android:id="@+id/tv_content4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/music_sign_text_margin_left"
                    android:gravity="center_vertical|left"
                    android:paddingBottom="@dimen/margin_3"
                    android:paddingTop="@dimen/margin_3"
                    android:text=""
                    android:textColor="@color/text_black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/music_sign_text_margin_left"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_project_name5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/margin_3"
                    android:paddingBottom="@dimen/margin_3"
                    android:gravity="center_vertical"
                    android:text="联系电话："
                    android:textColor="@color/text_normal"
                    />
                <TextView
                    android:id="@+id/tv_content5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/margin_3"
                    android:paddingBottom="@dimen/margin_3"
                    android:layout_marginLeft="@dimen/music_sign_text_margin_left"
                    android:gravity="center_vertical|left"
                    android:text=""
                    android:textColor="@color/text_black"
                    />
            </LinearLayout>

         </LinearLayout>

            <!--缴费金额-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/music_sign_item_height"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/music_sign_text_margin_left"
                android:text="缴费金额"
                android:textColor="@color/text_normal"
                />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="@dimen/music_sign_text_margin_left"
                    android:orientation="vertical"
                    android:background="@drawable/shape_bg_hintgrey"
                    >

                <!--考试费-->
                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/music_sign_payment_text_height"
                    android:paddingLeft="@dimen/music_sign_text_margin_left"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="价格："
                        android:textColor="@color/text_normal"
                        android:textSize="@dimen/music_sign_text_size" />
                    <TextView
                        android:id="@+id/tv_price2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/music_sign_text_size"
                        android:textColor="@color/text_black"
                        />
                </LinearLayout>

                </RelativeLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>