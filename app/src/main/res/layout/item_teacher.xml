<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_contain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_click_item_white"
    android:paddingLeft="@dimen/margin_16"
    android:paddingTop="@dimen/margin_8">

    <cn.sanfast.xmutils.bitmap.view.CircleImageView
        android:id="@+id/civ_avatar"
        android:layout_width="@dimen/icon_size_64"
        android:layout_height="@dimen/icon_size_64"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/icon_size_64"
        android:layout_alignTop="@+id/civ_avatar"
        android:layout_toRightOf="@+id/civ_avatar"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/icon_size_18"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_toLeftOf="@+id/tv_price"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/text_normal_dark"
                android:textSize="@dimen/text_size_16"/>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_16"/>

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/margin_16"
            android:layout_toLeftOf="@+id/tv_distance"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/text_right"
            android:textSize="@dimen/text_size_15"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/text_size_15"/>

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_normal"
            android:textSize="@dimen/text_size_14"/>

    </RelativeLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="0.1px"
        android:layout_below="@+id/civ_avatar"
        android:layout_marginTop="@dimen/margin_8"
        android:background="@color/line"/>

</RelativeLayout>
