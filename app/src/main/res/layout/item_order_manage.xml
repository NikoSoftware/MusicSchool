<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_order_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_16"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/text_normal_dark"
        android:textSize="@dimen/text_size_17"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_12"
            android:layout_toLeftOf="@+id/tv_order_status"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/text_right"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/tv_order_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_6"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/text_right"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/tv_order_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_6"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/text_right"
                android:textSize="@dimen/text_size_15" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textSize="@dimen/text_size_15" />

    </RelativeLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_16"
        android:background="@color/line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_check_detail"
            android:layout_width="88dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="14dp"
            android:background="@drawable/selector_bg_order_check"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_8"
            android:paddingLeft="@dimen/margin_12"
            android:paddingRight="@dimen/margin_12"
            android:paddingTop="@dimen/margin_8"
            android:text="查看详情"
            android:textColor="@color/text_right"
            android:textSize="@dimen/text_size_16"
            android:layout_marginEnd="14dp"
            android:layout_alignBaseline="@+id/tv_order_price"
            android:layout_alignBottom="@+id/tv_order_price"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/tv_order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_8"
            android:layout_marginLeft="@dimen/margin_12"
            android:layout_marginTop="@dimen/margin_8"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_8"
            android:paddingLeft="@dimen/margin_12"
            android:paddingRight="@dimen/margin_12"
            android:paddingTop="@dimen/margin_8"
            android:textColor="@color/text_money"
            android:textSize="@dimen/text_size_16"/>

    </RelativeLayout>

    <View
        android:id="@+id/view_blank"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_10"
        android:background="@drawable/shape_bg_rect_activity"/>

</LinearLayout>
