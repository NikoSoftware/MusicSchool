<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity"
    android:fitsSystemWindows="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            >

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="@dimen/icon_size_100"
                android:layout_height="@dimen/icon_size_100"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/margin_48"
                android:layout_marginTop="@dimen/margin_64"
                android:src="@drawable/ic_about"/>

            <TextView
                android:id="@+id/tv_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_copyright"
                android:layout_below="@+id/iv_logo"
                android:layout_marginBottom="@dimen/margin_24"
                android:layout_marginLeft="@dimen/margin_24"
                android:layout_marginRight="@dimen/margin_24"
                android:lineSpacingExtra="5dip"
                android:textColor="@color/text_normal_dark"
                android:textSize="@dimen/text_size_16"/>

            <TextView
                android:id="@+id/tv_copyright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_company"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/margin_8"
                android:text="Copyright © 2017"
                android:textColor="@color/tab_grey"
                android:textSize="@dimen/text_size_16"/>

            <TextView
                android:id="@+id/tv_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/margin_16"
                android:text="毕业设计项目（陈中勤）"
                android:textColor="@color/tab_grey"
                android:textSize="@dimen/text_size_16"/>

        </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
